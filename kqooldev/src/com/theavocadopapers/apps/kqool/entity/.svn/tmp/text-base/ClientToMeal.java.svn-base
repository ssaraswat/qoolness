package com.theavocadopapers.apps.kqool.entity;

import java.util.Date;
import java.util.List;

import com.theavocadopapers.core.logging.Logger;

public class ClientToMeal extends AbstractDbObject{

	private static final Class currentClass=ClientToMeal.class;
	
	private static final Logger logger = Logger.getLogger(currentClass);
	
	protected String mealType;
	protected int clientId;
	protected int mealId;
	protected int mealOrder;
	protected Date date;
	
	
	public static ClientToMeal getById(final int id) {
		return (ClientToMeal)getById(currentClass, id, false);
	}
	
	@Override
	protected Comparable getComparableValue() {
		return new Integer(getId());
	}

	public String getMealType() {
		return mealType;
	}

	public void setMealType(String mealType) {
		this.mealType = mealType;
	}

	public int getClientId() {
		return clientId;
	}

	public void setClientId(int clientId) {
		this.clientId = clientId;
	}

	public int getMealId() {
		return mealId;
	}

	public void setMealId(int mealId) {
		this.mealId = mealId;
	}

	public int getMealOrder() {
		return mealOrder;
	}

	public void setMealOrder(int mealOrder) {
		this.mealOrder = mealOrder;
	}

	public Date getDate() {
		return date;
	}

	public void setDate(Date date) {
		this.date = date;
	}

	public static ClientToMeal getByUserId(final int userId,final Date selectedDate) {
		return (ClientToMeal)getUniqueByClientMealField("clientId", ""+userId,"Date",""+selectedDate,FIELD_TYPE_NUMERIC, currentClass, false);
	}


	public static List getAll() {
		return getAll(currentClass);
	}
	
}
